{% extends "base.html.twig" %}

{% block title %}Articles{% endblock %}

{% block body %}
    <article>
        <h2>{{article.title}}</h2>
        <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}} dans la catégorie ...</div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            <p>{{article.content | raw}}</p>
            <hr>
