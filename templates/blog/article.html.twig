{% extends "base.html.twig" %}

{% block title %}Articles{% endblock %}

{% block body %}
    <article>
        <h2>{{article.title}}</h2>
            <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y')}} √† {{article.createdAt | date('H:i')}} dans la cat√©gorie {{article.category.title}}</div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            <p>{{article.content | raw}}</p>
            <hr>
        </div>
        <div class="commentaires">
            <h3>{{article.comments | length}} Commentaires</h3>
            {% for comment in article.comments %}
                <div class="commentaire">
                    <div class="row">
                        <div class="col-3">
                            {{comment.author}} (<small>{{comment.createdAt | date('d/m/Y √† H:i')}}</small>)
                        </div>
                        <div class="col">
                            {{comment.content | raw}}
                        </div>
                    </div>
                </div>
                <hr>
            {% endfor %}
            {% if app.user %}
                {{form_start(CommentForm)}}
                {{form_row(CommentForm.author,{'label':"Auteur",'attr': {'placeholder': "Auteur"}})}}
                {{form_row(CommentForm.content,{'label':"Commentaire",'attr': {'placeholder': "Commentaire"}})}}
                <button type="submit" class="btn btn-primary">üìù Poster</button>
                {{form_end(CommentForm)}}
            {% else %}
                <h3>Veuillez vous connecter pour commenter</h3>
                <a href="{{path('security_login')}}" class="btn btn-primary">Connexion</a>
            {% endif %}
            <hr>
    
        </div>
    </article>
    <div class="buttons">
        <a href='{{ path('article_edit', {'id':article.id}) }}' class="btn btn-primary">üìù Modifier l'article</a>
        <a href="{{path('home')}}" class="btn btn-secondary">üè† Accueil</a>
        <a href="{{path('blog')}}" class="btn btn-secondary">üì∞ Blog</a>
        <a href="{{path('article_create')}}" class="btn btn-secondary">‚ûï Cr√©er une nouvelle articles</a>
    </div>
    

{% endblock %}