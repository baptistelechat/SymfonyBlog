{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

    <section class="articles">

        {% for article in articles %}
            <article>
                <h2>{{article.title}}</h2>
                <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}} dans la catégorie ...</div>
                <div class="content">
                    <img src="{{article.image}}" alt="">
                    <p>{{article.content | raw}}</p>
                    <a href="{{ path('article_show', {'id':article.id}) }}" class="btn btn-primary">📚 Lire la suite</a>
                    <hr>
                </div>
            </article>  
        {% endfor %}

    </section>
    <a href="{{path('home')}}" class="btn btn-secondary">🏠 Accueil</a>
    <a href="{{path('blog')}}" class="btn btn-secondary">📰 Blog</a>
    <a href="{{path('article_create')}}" class="btn btn-secondary">➕ Créer une nouvelle articles</a>

{% endblock %}
